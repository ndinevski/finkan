# Backend Environment Variables
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=finkan
PORT=3000

# Microsoft OAuth Credentials
# These need to be filled with actual values from the Microsoft Azure Portal
MICROSOFT_CLIENT_ID=your_client_id_here
MICROSOFT_CLIENT_SECRET=your_client_secret_here
MICROSOFT_REDIRECT_URI=http://localhost:3000/api/auth/microsoft/callback
MICROSOFT_TENANT_ID=common  # Use 'common' for multi-tenant apps

# JWT Configuration
JWT_SECRET=your_jwt_secret_here  # Replace with a secure random string in production
JWT_EXPIRES_IN=7d  # 7 days expiration for JWT tokens

# Cookie Configuration
COOKIE_SECRET=your_cookie_secret_here  # Replace with a secure random string in production
